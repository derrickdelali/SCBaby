<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="scbaby.app.scbaby.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:text="Register"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="Parent Name"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textPersonName|text|textEmailAddress"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:text="Age"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtAge"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Enter Your Age"
                android:inputType="date"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Password"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:text="Country"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/country"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Enter Country of Origin"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:text="Acccepting this mean you have agreed to the Terms and Conditions. You can also check out our privacy policy here." />

            <CheckBox
                android:id="@+id/chBox"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-44dp" />

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:onClick="onClick"
                android:text="Create Account"
                android:textAllCaps="false"
                app:backgroundTint="#0000ff"
                android:textSize="16sp"
                android:textStyle="normal"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="45dp"
                android:layout_height="19dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="88dp"
                android:onClick="onLogin"
                android:text="Login"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E91E63" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-39dp"
                android:layout_marginBottom="20dp"
                android:text="Already Have an Account?  "
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>